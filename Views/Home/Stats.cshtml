@using PortalFilmowy.Helpers
@{
    ViewData["Title"] = "Statystyki";
    // Użycie Layoutu Admina 
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container text-white">
    <h1>Panel Administratora - Statystyki</h1>
    <hr />

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card bg-dark border-light">
                <div class="card-header">Najwyżej oceniany film</div>
                <div class="card-body">
                    <h3 class="text-warning">@ViewBag.BestMovieTitle</h3>

                    @if (@ViewBag.BestMovieRatingInt > 0)
                    {
                                    <p>Średnia ocena użytkowników: <strong>@ViewBag.BestMovieRatingVal.ToString("0.0")/10</strong></p>
                                <star-rating value="@ViewBag.BestMovieRatingInt"></star-rating>
                    }
                    else
                    {
                            <p class="text-muted">Brak wystarczającej liczby głosów.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card bg-dark border-light">
                <div class="card-body">
                    <h5>Liczba filmów w bazie: <span class="badge bg-primary">@ViewBag.moviesCount</span></h5>
                    <h5>Liczba opinii: <span class="badge bg-info">@ViewBag.reviewsCount</span></h5>
                </div>
            </div>
        </div>
    </div>
</div>