<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ADMIN PANEL - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Specyficzne style dla Admina - ciemne tło */
        body {
            background-color: #343a40;
            color: #f8f9fa;
        }
        .card {
            color: #000; /* Karty muszą mieć czarny tekst, żeby były czytelne */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-danger" asp-controller="Home" asp-action="Stats">🛡️ ADMIN PANEL</a>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Stats">📊 Statystyki</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Movies" asp-action="Create">➕ Dodaj Film</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Genres" asp-action="Index">📂 Zarządzaj Gatunkami</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Movies" asp-action="Index">Wróć do strony głównej</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-white-50 bg-dark">
        <div class="container">
            &copy; 2024 - PortalFilmowy (Panel Administratora)
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>