@model IEnumerable<PortalFilmowy.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Director)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                Średnia ocen
            </th>
            <th>
                Opcje
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
            <td>
                    @{
                        // Logika obliczania średniej
                        double avg = 0;
                        if (item.Reviews != null && item.Reviews.Any())
                        {
                            avg = item.Reviews.Average(r => r.Rating);
                        }
                    }

                    @if (avg > 0)
                    {
                            <span style="font-weight:bold; color:#ffc107;">
                            @avg.ToString("0.0") / 10
                            </span>
                    }
                    else
                    {
                            <span class="text-muted">Brak ocen</span>
                    }
            </td>
            <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> <span> | </span>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> <span> | </span>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                    else
                    {
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
