@model PortalFilmowy.Models.Review

@{
    ViewData["Title"] = "Edytuj Opinię";
}

<h2>Edytuj swoją opinię</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="EditReview">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="MovieId" />

            <div class="form-group mb-3">
                <label asp-for="Rating" class="control-label">Ocena (1-10)</label>
                <select asp-for="Rating" class="form-control">
                    @for (int i = 10; i >= 1; i--)
                    {
                            <option value="@i">@i</option>
                    }
                </select>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Comment" class="control-label">Treść opinii</label>
                <textarea asp-for="Comment" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Zapisz zmiany" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.MovieId" class="btn btn-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}